CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = --Wall -Werror -Wextra -pedantic

$(NAME) : $(OBJ)
		$(CC) $(CFLAGS) -c -o $@ $^

all : m.h $(OBJ)

clean :
		$(RM) -f *~ $(NAME)
oclean :
		$(RM) -f $(OBJ)
fclean : clean oclean
re : fclean all

.PHONY: all clean oclean fclean re
